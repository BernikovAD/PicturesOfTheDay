<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PicturesOfTheDay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CustomOutlinedBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">20</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="counterOverflowTextColor">@color/black</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_wikipedia</item>
    </style>


    <style name="MyNavigationView" >
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">@dimen/margin_start_navigation_view</item>
        <item name="android:layout_marginTop">@dimen/margin_top_navigation_view</item>
        <item name="android:layout_marginEnd">@dimen/margin_end_navigation_view</item>
    </style>
    <style name="view_line">
        <item name="android:layout_width">@dimen/width_view_line</item>
        <item name="android:layout_height">@dimen/height_view_line</item>
        <item name="android:layout_marginTop">@dimen/margin_top_view_line</item>
        <item name="android:background">#663b4351</item>
    </style>
    <style name="my_text_view">
        <item name="android:fontFamily">cursive</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <dimen name="text_size">30sp</dimen>
</resources>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PicturesOfTheDay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/purple_200</item>
        <item name="colorOnSurface">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/almendra_italic</item>
        <item name="android:windowBackground">@color/window_backgraund_theme_1</item>
        <item name="android:navigationBarColor">@color/purple_500</item>
        <item name="textInputStyle">@style/CustomOutlinedBox</item>
    </style>

    <!--  application theme 2. -->
<style name="Theme_2" parent="Theme.PicturesOfTheDay">
    <item name="colorPrimary">@color/color_primary_theme_2</item>
    <item name="colorPrimaryVariant">@color/color_primary_variant_theme_2</item>
    <item name="colorPrimaryDark">@color/color_primary_dark_theme_2</item>
    <item name="colorSurface">@color/color_primary_variant_theme_2</item>
    <item name="colorOnSurface">@color/color_primary_theme_2</item>
    <item name="colorSecondary">@color/color_primary_theme_2</item>
    <item name="android:windowBackground">@color/window_backgraund_theme_2</item>
    <item name="android:navigationBarColor">@color/color_primary_theme_2</item>
    <item name="fontFamily">@font/arbutus</item>
    <item name="textInputStyle">@style/CustomOutlinedBox</item>
</style>
    <!--  application theme 3. -->
    <style name="Theme_3" parent="Theme.PicturesOfTheDay">
        <item name="colorPrimary">@color/color_primary_theme_3</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant_theme_3</item>
        <item name="colorPrimaryDark">@color/color_primary_dark_theme_3</item>
        <item name="colorSurface">@color/color_primary_variant_theme_3</item>
        <item name="colorSecondary">@color/color_primary_theme_3</item>
        <item name="colorOnSurface">@color/color_primary_theme_3</item>
        <item name="android:windowBackground">@color/window_backgraund_theme_3</item>
        <item name="android:navigationBarColor">@color/color_primary_theme_3</item>
        <item name="fontFamily">@font/arbutus</item>
        <item name="textInputStyle">@style/CustomOutlinedBox</item>
    </style>


    <!--  style -->
    <style name="CustomOutlinedBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">20</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="counterOverflowTextColor">@color/black</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_wikipedia</item>
    </style>
    <style name="MyStyleButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="cornerRadius">100dp</item>
    </style>
    <style name="MyStyleButtonOutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">100dp</item>
    </style>
    <style name="MyStyleButtonUnelevatedButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="linear_layout_tabs_layout">
        <item name="android:layout_marginStart">@dimen/margin_start_row_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_row_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_end_row_content</item>
    </style>

    <style name="MyNavigationView" >
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">@dimen/margin_start_row_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_row_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_end_row_content</item>
    </style>
    <style name="view_line">
        <item name="android:layout_width">@dimen/width_view_line</item>
        <item name="android:layout_height">@dimen/height_view_line</item>
        <item name="android:layout_marginTop">@dimen/margin_top_view_line</item>
        <item name="android:background">#663b4351</item>
    </style>
    <style name="my_text_view">
        <item name="android:fontFamily">cursive</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>


</resources>
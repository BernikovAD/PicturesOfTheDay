<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:app="urn:oasis:names:tc:xliff:document:1.2">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <OnClick app:targetId="@+id/appCompatImageView"/>
        <KeyFrameSet >
            <KeyAttribute
                motion:motionTarget="@+id/appCompatImageView"
                motion:framePosition="150"
                android:rotationY="50"
                android:rotationX="50" />
            <KeyAttribute
                motion:motionTarget="@+id/appCompatImageView"
                motion:framePosition="40"
                android:rotationX="5" />
            <KeyAttribute
                motion:motionTarget="@+id/appCompatImageView"
                motion:framePosition="30"
                android:translationX="100dp" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/discription_solar"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/scroll"
            motion:layout_constraintTop_toBottomOf="@+id/logo_solar"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0" />
        <Constraint
            android:id="@+id/scroll"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/discription_solar"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0" />
        <Constraint
            android:id="@+id/logo_solar"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/GL_10_Horizontal"
            motion:layout_constraintTop_toTopOf="@+id/GL_10_Horizontal"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationY="100dp"
            android:scaleX="5"
            android:scaleY="5"  />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/discription_solar"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/scroll"
            motion:layout_constraintTop_toBottomOf="@+id/logo_solar"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="1" />
        <Constraint
            android:id="@+id/scroll"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/discription_solar"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="1" />
    </ConstraintSet>
</MotionScene>

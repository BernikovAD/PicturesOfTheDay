<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GL_10_Horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo_settings_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/GL_10_Horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/GL_10_Horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_settings_one" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo_settings_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/GL_10_Horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/GL_10_Horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_settings_two" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo_settings_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/GL_10_Horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/GL_10_Horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_settings_three" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30dp"
        android:text="@string/settings"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/GL_40_Horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GL_10_Horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GL_40_Horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/theme_1"
        style="@style/MyStyleButtonOutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_text_theme_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/theme_2"
        app:layout_constraintBottom_toTopOf="@+id/GL_40_Horizontal"
        app:layout_constraintTop_toTopOf="@+id/GL_40_Horizontal"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/theme_2"
        style="@style/MyStyleButtonOutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:insetLeft="10dp"
        android:text="@string/btn_text_theme_2"
        app:layout_constraintEnd_toStartOf="@+id/theme_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/theme_1"
        app:layout_constraintBottom_toTopOf="@+id/GL_40_Horizontal"
        app:layout_constraintTop_toTopOf="@+id/GL_40_Horizontal"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/theme_3"
        style="@style/MyStyleButtonOutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:insetLeft="10dp"
        android:text="@string/btn_text_theme_3"
        app:layout_constraintStart_toEndOf="@+id/theme_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/GL_40_Horizontal"
        app:layout_constraintTop_toTopOf="@+id/GL_40_Horizontal"/>


</androidx.constraintlayout.widget.ConstraintLayout>
